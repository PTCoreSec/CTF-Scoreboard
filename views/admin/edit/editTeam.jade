extends ../layout

block content
    section#main.column
      .clear
      article.module.width_full
        form(action='/editTeam/#{team.idteams}', method='POST')
            header
              h3 Edit Team
            .module_content
              fieldset
                label Team Name
                input(type='text', name='teamName', value='#{team.name}')
              fieldset
                label Team Description
                textarea(rows='12', name='description') #{team.description}
              .clear
            footer
              .submit_link
                input.alt_btn(type='submit', value='Submit')
                input(type='submit', value='Reset')
        form#teamEditPassword
          header
            h3 Edit Team Password
          .module_content
            input(type='hidden', name='teamid', id='teamid', value='#{team.idteams}')
            fieldset
              label Team Password
              input(type='password', name='teamPassword', id='teamPassword', value='')
            fieldset
              label Confirm Team Password
              input(type='password', name='confirmTeamPassword', id='confirmTeamPassword',, value='')
            .clear
          footer
            .submit_link
              input.alt_btn(type='submit', value='Submit')
              input(type='submit', value='Reset')
      .spacer
